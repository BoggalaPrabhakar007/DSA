package main

import (
	"fmt"
	"sync"
)

func printEven(ch chan bool, n int, wg *sync.WaitGroup) {
	defer wg.Done()
	for i := 2; i < n; i += 2 {
		<-ch
		fmt.Println(i)
		ch <- true
	}

}
func printOdd(ch chan bool, n int, wg *sync.WaitGroup) {
	defer wg.Done()
	for i := 1; i < n; i += 2 {
		fmt.Println(i)
		ch <- true
		<-ch
	}
}

func main() {
	var wg sync.WaitGroup
	ch := make(chan bool)
	wg.Add(2)
	go printEven(ch, 10, &wg)
	go printOdd(ch, 10, &wg)
	wg.Wait()
}
